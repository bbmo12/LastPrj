<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.last.prj.qtag.service.QnaTagMapper">

	<select id="qtList"
		resultType="com.last.prj.qtag.service.QnaTagVO">
		SELECT t_name
		FROM qnatag
		WHERE q_no=#{q_no}
	</select>

	<!-- 글에 연결된 태그 삭제 -->
	<delete id="delTags" parameterType="int">
		DELETE FROM qnatag
		WHERE
		q_no=#{q_no}
	</delete>
	
	<!-- 새로운 태그와 글 번호 연결 -->
	<insert id="newQtag" parameterType="com.last.prj.qtag.service.QnaTagVO">
		<foreach collection="nTags" item="item" index="index" separator=";" open="DECLARE BEGIN" close="; END;">
		INSERT INTO qnatag
		values(q_seq.currval, #{item.t_name})
		</foreach>
	</insert>


</mapper>